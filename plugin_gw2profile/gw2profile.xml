<?xml version="1.0" encoding="utf-8"?>
<extension version="3.1" type="plugin" group="user" method="upgrade">
	<name>GW2 User Profile Plugin</name>
	<author>Joomla! Project</author>
	<creationDate>January 2008</creationDate>
	<copyright>(C) 2005 - 2017 Open Source Matters. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>jennifer@nodwell.net</authorEmail>
	<authorUrl>nodwell.net</authorUrl>
	<version>3.0.0</version>
	<description>PLG_USER_GW2PROFILE_XML_DESCRIPTION</description>
	<files>
		<filename plugin="gw2profile">gw2profile.php</filename>
		<folder>profiles</folder>
		<folder>field</folder>
	</files>
	<languages>
		<language tag="en-GB">en-GB.plg_user_gw2profile.ini</language>
		<language tag="en-GB">en-GB.plg_user_gw2profile.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic" addfieldpath="/administrator/components/com_content/models/fields">
				<field
					name="register-require-user"
					type="spacer"
					label="PLG_USER_GW2PROFILE_FIELD_NAME_REGISTER_REQUIRE_USER"
					class="text"
				/>
				<field
						name="register-require_apikey"
						type="list"
						label="PLG_USER_GW2PROFILE_FIELD_APIKEY_LABEL"
						description="PLG_USER_GW2PROFILE_FIELD_APIKEY_DESC"
				>
					<option value="2">JOPTION_REQUIRED</option>
					<option value="1">JOPTION_OPTIONAL</option>
					<option value="0">JDISABLED</option>
				</field>



				<field
					name="register-require_website"
					type="list"
					label="PLG_USER_GW2PROFILE_FIELD_WEB_SITE_LABEL"
					description="PLG_USER_GW2PROFILE_FIELD_WEB_SITE_DESC"
					>
					<option value="2">JOPTION_REQUIRED</option>
					<option value="1">JOPTION_OPTIONAL</option>
					<option value="0">JDISABLED</option>
				</field>

				<field
					name="register-require_favoritebook"
					type="list"
					label="PLG_USER_GW2PROFILE_FIELD_FAVORITE_BOOK_LABEL"
					description="PLG_USER_GW2PROFILE_FIELD_FAVORITE_BOOK_DESC"
					>
					<option value="2">JOPTION_REQUIRED</option>
					<option value="1">JOPTION_OPTIONAL</option>
					<option value="0">JDISABLED</option>
				</field>

				<field
					name="register-require_aboutme"
					type="list"
					label="PLG_USER_GW2PROFILE_FIELD_ABOUT_ME_LABEL"
					description="PLG_USER_GW2PROFILE_FIELD_ABOUT_ME_DESC"
					>
					<option	value="2">JOPTION_REQUIRED</option>
					<option	value="1">JOPTION_OPTIONAL</option>
					<option	value="0">JDISABLED</option>
				</field>

				<field
					name="register-require_tos"
					type="list"
					label="PLG_USER_GW2PROFILE_FIELD_TOS_LABEL"
					description="PLG_USER_GW2PROFILE_FIELD_TOS_DESC"
					default="0"
					>
					<option	value="2">JOPTION_REQUIRED</option>
					<option	value="0">JDISABLED</option>
				</field>

				<field
					name="register_tos_article"
					type="modal_article"
					label="PLG_USER_GW2PROFILE_FIELD_TOS_ARTICLE_LABEL"
					description="PLG_USER_GW2PROFILE_FIELD_TOS_ARTICLE_DESC"
					select="true"
					new="true"
					edit="true"
					clear="true"
				/>

				<field
					name="register-require_dob"
					type="list"
					label="PLG_USER_GW2PROFILE_FIELD_DOB_LABEL"
					description="PLG_USER_GW2PROFILE_FIELD_DOB_DESC"
					>
					<option	value="2">JOPTION_REQUIRED</option>
					<option	value="1">JOPTION_OPTIONAL</option>
					<option	value="0">JDISABLED</option>
				</field>

				<field
					name="spacer1"
					type="spacer"
					hr="true"
				/>

				<field
					name="gw2profile-require-user"
					type="spacer"
					label="PLG_USER_GW2PROFILE_FIELD_NAME_PROFILE_REQUIRE_USER"
					class="text"
				/>
				<field
						name="gw2profile-require_apikey"
						type="list"
						label="PLG_USER_GW2PROFILE_FIELD_APIKEY_LABEL"
						description="PLG_USER_GW2PROFILE_FIELD_APIKEY_DESC"
				>
					<option value="2">JOPTION_REQUIRED</option>
					<option value="1">JOPTION_OPTIONAL</option>
					<option value="0">JDISABLED</option>
				</field>


				<field
					name="gw2profile-require_website"
					type="list"
					label="PLG_USER_GW2PROFILE_FIELD_WEB_SITE_LABEL"
					description="PLG_USER_GW2PROFILE_FIELD_WEB_SITE_DESC"
					>
					<option value="2">JOPTION_REQUIRED</option>
					<option value="1">JOPTION_OPTIONAL</option>
					<option value="0">JDISABLED</option>
				</field>

				<field
					name="gw2profile-require_favoritebook"
					type="list"
					label="PLG_USER_GW2PROFILE_FIELD_FAVORITE_BOOK_LABEL"
					description="PLG_USER_GW2PROFILE_FIELD_FAVORITE_BOOK_DESC"
					>
					<option value="2">JOPTION_REQUIRED</option>
					<option value="1">JOPTION_OPTIONAL</option>
					<option value="0">JDISABLED</option>
				</field>

				<field
					name="gw2profile-require_aboutme"
					type="list"
					label="PLG_USER_GW2PROFILE_FIELD_ABOUT_ME_LABEL"
					description="PLG_USER_GW2PROFILE_FIELD_ABOUT_ME_DESC"
					>
					<option	value="2">JOPTION_REQUIRED</option>
					<option	value="1">JOPTION_OPTIONAL</option>
					<option	value="0">JDISABLED</option>
				</field>

				<field
					name="gw2profile-require_dob"
					type="list"
					label="PLG_USER_GW2PROFILE_FIELD_DOB_LABEL"
					description="PLG_USER_GW2PROFILE_FIELD_DOB_DESC"
					>
					<option	value="2">JOPTION_REQUIRED</option>
					<option	value="1">JOPTION_OPTIONAL</option>
					<option	value="0">JDISABLED</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
